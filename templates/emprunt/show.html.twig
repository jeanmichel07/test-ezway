{% extends 'base.html.twig' %}

{% block title %}Emprunt{% endblock %}

{% block body %}
    <h1>Emprunt</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ emprunt.id }}</td>
            </tr>
        <tr>
            <th>Date sortie</th>
            <td>{{ emprunt.dateSortie|date('d/m/y') }}</td>
        </tr>
        <tr>
            <th>Date rendu</th>
            <td>{{ emprunt.dateRendu|date('d/m/y') }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('emprunt') }}" class="btn btn-outline-primary">Retour a la liste</a>

    <a href="{{ path('modifier_emprunt', {'id': emprunt.id}) }}" class="btn btn-secondary">Modifier</a>

    {{ include('emprunt/_delete_form.html.twig') }}
{% endblock %}
