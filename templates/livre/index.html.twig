{% extends 'base.html.twig' %}

{% block title %}Livre index{% endblock %}

{% block body %}
    <h2 class="py-2 d-flex justify-content-center text-uppercase">Les Livre</h2>

    <a class="btn btn-outline-primary" href="{{ path('nouveau_livre') }}"><i class="fas fa-plus"></i> Nouveau livre</a>

    <table class="table">
        <thead>
            <tr class="bg-info text-white fw-bolder">
                <th>Identifiant</th>
                <th>Auteur</th>
                <th>Titre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres|reverse %}
            <tr>
                <td>{{ livre.id }}</td>
                <td>{{ livre.auteur }}</td>
                <td>{{ livre.titre }}</td>
                <td>
                    <a href="{{ path('infos_livre', {'id': livre.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('modifier_livre', {'id': livre.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
